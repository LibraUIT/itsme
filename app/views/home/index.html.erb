<div class="page-header" style="width:780px">
  <h1 class="title">Top Idols</h1>
</div>
<div class="container" style="width: 1040px">
    <div class="row">
        <div class="col-sm-9">
            <% @idols.each do |idol| %>
                <div class="col-lg-4 col-md-4 col-xs-6 thumb">
                    <%= link_to idol_path(idol), class: 'thumbnail' do %>
                        <%= image_tag idol.avatar.url, class: "img-responsive" %>
                    <% end %>
                    <h4 class="idol-name"><%= idol.name %></h4>
                </div>
            <% end %>
            <%= paginate @idols %>
        </div>
        <div class="col-s-3">
            <div class="aside-nolog">
                <h3>DOWNLOAD FOR MOBILE</h3>
                <div class="mobile-download">

                    <div class="icon">
                        <%= image_tag "Icon_Googleplay.png" %>
                        <a href="https://play.google.com/store/apps/details?id=media.itsme" target="_blank" class="btn05">Download</a>
                    </div>
                </div>
                <div class="mobile-download">

                    <div class="icon">
                        <%= image_tag "Icon_Appstore.png" %>
                        <a href="https://itunes.apple.com/app/id1089500702" target="_blank" class="btn05">Download</a>
                    </div>
                </div>

            </div>
            <div class="aside-nolog">
                <h3>FOLLOW US</h3>
                <div class="mobile-download">
                    <div class="icon">
                        <%= image_tag "Icon_Googleplay.png" %>
                        <a href="https://play.google.com/store/apps/details?id=media.itsme" target="_blank" class="btn05">Download</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
